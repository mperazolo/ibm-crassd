[Unit]
Description=HW Monitoring service for IBM POWER LC servers
After=multi-user.target syslog.target

[Service]
Type=simple
ExecStart=/usr/bin/python /opt/ibm/ras/bin/ibm-crassd.py
WorkingDirectory=/opt/ibm/ras/bin
Restart=always
RestartSec=5
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=10
SendSIGKILL=yes
SyslogIdentifier=ibm-crassd

[Install]
WantedBy=multi-user.target